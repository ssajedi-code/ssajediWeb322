<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        {{#if items}}
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{title}}</td>
                            <td>{{price}}</td>
                            <td><a href="/items?category={{category}}">{{category}}</a></td>
                            <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>No items found</p>
        {{/if}}
    </div>
</div>
